{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngx-build/core-lib": ["packages/core-lib/src/index.ts"],
      "@ngx-build/esbuild-plugin": ["packages/esbuild-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
